<%= stylesheet_link_tag "users", :media => "all" %>
<div class="container-fluid">
  <div class="full-page">
    <%= render 'public/homes/header', current_user: current_user %>
    <div class= "row text-white">

      <% @RoomUsers.each do |r| %>
        <div class="col-md-3 text-center text-white mt-5">
          <% if r == current_user %>
            <h2>MY PROFILE</h2>
          <% else%>
            <h2>PROFILE</h2>
          <% end %>
          <%#= link_to users_show_path(user.id) do %>
          <div class="text-center"><%= image_tag r.get_profile_image(170,170), class:"border border-3" %></div>
          <h3><%= r.name %></h3>
          <%# end %>
          <div>自己紹介</div>
          <% if !r.introduction.blank? %>
            <h5 class= "border-bottom mt-2 ml-4 mr-4"><%= r.introduction %></h5>
          <% else %>
            <h6 class= "border-bottom">まだ設定していません</h6>
          <% end %>
          <table align="center" width="220" height="180">
            <tr class= "border-bottom">
              <td><%= "投稿数　:　 #{r.post_images.count}" %> 件</td>
            </tr>
            <tr class= "border-bottom">
                <td><%= link_to "Follow　: 　#{r.followings.count}", user_followings_path(r.id), class:"text-light" %></td>
                <%#= link_to user.followings.count, followings_path(user.id), class:"text-light" %>
            </tr>
            <tr class= "border-bottom">
              <%#= link_to relationships_followers_path(user.id) do %>
                <td><%= link_to "Follower　: 　#{r.followers.count}", user_followers_path(r.id), class:"text-light" %></td>
                <%#= link_to user.followers.count, followers_path, class:"text-light" %>
              <%# end %>
            </tr>
          </table>
          <% if r == current_user %>
          <% else %>
            <% if current_user.following?(r) %>
              <div><%= link_to "フォロー中", user_relationships_path(r.id), method: :delete, class:"text-light btn btn-outline-success mt-4" %></div>
            <% else %>
              <div><%= link_to "フォローする", user_relationships_path(r.id), method: :post, class:"text-light btn btn-outline-success mt-4" %></div>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div class="chats col-md-5">
        <h1 class="mt-4 text-center mb-3"><%= @another_user.name %>さんとの D M</h1>
          <div class='box4 scroll'>
            <% if @messages.present? %>
              <% @messages.each do |m| %>
                <div class="chat-box ">
                  <div class="chat-text">
                    <table width="680px" class="mb-3">
                      <tr>
                        <td width="17%"><%= m.user.name %></td>
                        <td width="83%"><%= m.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                      </tr>
                      <tr>
                        <td></td>
                        <td><%= m.body %></td>
                      </tr>
                    </table>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p>メッセージはまだありません</p>
            <% end %>
          </div>
      </div>

    </div>
      <div class= "row text-white">
        <div class="col-md-6 text-center text-white mt-4"></div>
          <div class="col-md-6 text-center text-white mt-4">
            <%= form_with model: @message, url: room_messages_path(params[:id]), local: true do |f| %>
              <%= f.text_area :body, placeholder: "メッセージを入力してください", class: "bg-transparent border border-white text-white", size: "40x4" %>
              <%= f.hidden_field :room_id, value: @room.id %>
              <%= f.submit "送信する" %>
            <% end %>
          </div>
      </div>
  </div>
</div>