<%= stylesheet_link_tag "users", :media => "all" %>
<div class="container-fluid">
  <div class="full-page">

    <%= render 'public/homes/header' %>

    <div class= "row">

      <div class="col-md-3 text-center text-white mt-2">
        <div><%= render 'public/search/user_search', search_u: @search_u %></div>
        <div><%= render 'public/search/post_search', search_p: @search_p %></div>
      </div>

      <div class="col-md-5 text-white mt-2">
        <h3 class="ml-2">検索結果</h3>
      </div>

      <div class="col-md-4 text-white mt-2">
        <%= paginate @search_post_images, theme: 'bootstrap-5' %>
      </div>

    <div class= "row">
      <%= render 'public/users/profile', user: current_user %>

        <%# if !@search_post_images.blank? %>
          <%= render 'list', post_images: @search_post_images %>
        <%# else %>
          <!--<p>検索した投稿はありません</p> -->
        <%# end %>
    </div>
  </div>
</div>