<%= stylesheet_link_tag "users", :media => "all" %>
<div class="container-fluid">
  <div class="full-page">
    <div class= "row">
      <div class= "col-md-12 text-center text-white" style="margin-top:80px">
        <h1>新規投稿</h1>
      </div>
    </div>
    <%= form_with model: @post_image do |f| %>
      <div class= "row">
        <div class= "col-md-4"></div>
        <div class= "col-md-4 text-center text-white">

          <table align="center" style="height: 380px">
            <tr>
              <td><label for="inputName">画像</label></td>
              <td><%= f.file_field :image, accept: "image/*", multiple: true %></td>
            </tr>
            <tr>
              <td><label for="inputIntroduction">タイトル</label></td>
              <td><%= f.text_field :title, class: "bg-transparent border border-white text-white", size: "30x3" %></td>
            </tr>
            <tr>
              <td><label for="inputImage">本文</label></td>
              <td><%= f.text_area :body, class: "bg-transparent border border-white text-white", size: "30x7" %></td>
            </tr>
          </table>

        </div>
        <div class= "col-md-4 text-center text-white">
          <% if @post_image.errors.any? %>
            <h4><%= @post_image.errors.count %>件のエラーが発生しました</h4>
            <% @post_image.errors.full_messages.each do |message| %>
              <h4><%= message %></h4>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class= "row">
        <div class= "col-md-12 text-center text-white">
          <div style="margin-top:3px"><%= f.submit "投稿する", class:"btn btn-outline-success" %></div>
          <div class="mt-3"><%= link_to "戻る", user_path(@current_user.id), class:"btn btn-outline-success" %></div>
        </div>
      </div>

    <% end %>

  </div>
</div>