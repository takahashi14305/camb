<%= stylesheet_link_tag "users", :media => "all" %>
<div class="container-fluid">
  <div class="full-page">
    <div class= "row">
      <div class= "col-md-12 text-center text-white" style="margin-top:80px">
        <h1>プロフィール編集</h1>
      </div>
    </div>
    <%= form_with model: @user do |f| %>
      <div class= "row">
        <div class= "col-md-4 text-center text-white"></div>
        <div class= "col-md-4 text-center text-white">
          <table align="center" style="height: 200px">
            <tr>
              <td><label for="inputName">名前</label></td>
              <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" , class: "bg-transparent border border-white text-white" %></td>
            </tr>
            <tr>
              <td><label for="inputIntroduction">自己紹介</label><br>※95字制限</td>
              <td><%= f.text_area :introduction, class:"form-control introduction", class: "bg-transparent border border-white text-white" %></td>
            </tr>
            <tr>
              <td><label for="inputImage">Profile Image</label></td>
              <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
            </tr>
          </table>
        </div>
        <div class= "col-md-4 text-center text-white">
          <% if @user.errors.any? %>
            <h4><%= @user.errors.count %>件のエラーが発生しました</h4>
            <% @user.errors.full_messages.each do |message| %>
              <h4><%= message %></h4>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class= "row">
        <div class= "col-md-12 text-center text-white">
          <div style="margin-top:3px"><%= f.submit "変更を保存", class:"btn btn-outline-success" %></div>
          <div class="mt-3"><%= link_to "マイページ", user_path(@current_user.id), class:"btn btn-outline-success" %></div>
        </div>
      </div>

    <% end %>

  </div>
</div>