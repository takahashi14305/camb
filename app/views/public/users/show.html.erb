<%= stylesheet_link_tag "users", :media => "all" %>
<div class="container-fluid">
  <div class="full-page">

    <div class= "row">
      <div class="col-md-3 text-center text-white" style="margin-top:50px">

        <div>
          <h3><%= @current_user.name %></h3>
          <div class="pro-img" ><%= image_tag @current_user.get_profile_image(200,200), class: "rounded-circle" %></div>
          <%= link_to "プロフィール編集", edit_user_path(@user) %>
        </div>


        <% @post_images.each do |post_image| %>
        <div>
          <%= link_to post_image_path(post_image.id) do %>
            <%= image_tag post_image.get_image %>
          <% end %>
          <p>投稿ユーザー画像：<%= image_tag post_image.user.get_profile_image(100,100) %></p>
          <p>ショップ名：<%= post_image.title %></p>
          <p>説明：<%= post_image.body %></p>
          <p>ユーザーネーム：<%= post_image.user.name %></p>
          <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>