<div class="col-md-3 text-center text-white" style="margin-top:0px">
  <div>
    <% if user == current_user %>
      <h2>MY PROFILE</h2>
    <% else%>
      <% if user.is_deleted %>
        <h2>このユーザーは<br>退会済みです</h2>
      <% else %>
       <h2>PROFILE</h2>
      <% end %>
    <% end %>
    <%#= link_to users_show_path(user.id) do %>
      <div class="text-center"><%= image_tag user.get_profile_image(170,170), class:"border border-3" %></div>
      <h3><%= user.name %></h3>
    <%# end %>

    <div>自己紹介</div>
    <% if !user.introduction.blank? %>
      <div class= "introduction border-bottom mt-2 ml-4 mr-4"><%= user.introduction %></div>
    <% else %>
      <div class= "introduction border-bottom mt-2">まだ設定していません</div>
    <% end %>
    <table align="center" width="220" height="140">
      <tr class= "border-bottom">
        <td><%= "投稿数　:　 #{user.post_images.count}" %> 件</td>
      </tr>
      <tr class= "border-bottom">
          <td><%= link_to "Follow　: 　#{user.followings.count}", user_followings_path(user.id), class:"text-light" %></td>
          <%#= link_to user.followings.count, followings_path(user.id), class:"text-light" %>
      </tr>
      <tr class= "border-bottom">
        <%#= link_to relationships_followers_path(user.id) do %>
          <td><%= link_to "Follower　: 　#{user.followers.count}", user_followers_path(user.id), class:"text-light" %></td>
          <%#= link_to user.followers.count, followers_path, class:"text-light" %>
        <%# end %>
      </tr>
    </table>
    <% if user == current_user %>
      <div><%= link_to "プロフィール編集", edit_user_path(current_user), class:"text-light btn btn-outline-success mt-4" %></div>
      <div class="">
        <% if current_user.email == 'guest@exp.com' %>
          <div class="btn btn-outline-success text-danger mt-4">退会する</div>
        <% else %>
          <%= link_to "退会する", unsubscribe_path(current_user), class:"text-danger btn btn-outline-success mt-4" %>
        <% end %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"text-light btn btn-outline-success mt-4 ml-3" %></div>
      <h6 class="mt-3"><%= flash[:notice] %></h6>
    <% else %>
      <% if current_user.email == 'guest@exp.com' %>
          <div class="btn btn-outline-success text-light mt-4">フォローする</div><br>
          <div class="btn btn-outline-success text-light mt-4">D Mを始める</div>
          <h5 class="mt-4">ゲストはフォロー･<br>D Mはできません</h5>
      <% else %>

        <% if current_user.following?(user) %>
          <div><%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class:"text-light btn btn-outline-success mt-4" %></div>
        <% else %>
          <div><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"text-light btn btn-outline-success mt-4" %></div>
        <% end %>

        <% unless @user.id == current_user.id %>
          <% if @have_room == true %>
            <%= link_to "ダイレクトメッセージ", room_path(@room.id), method: :get, class:"text-light btn btn-outline-success mt-4" %>
          <% else %>
            <%= form_with model: @room, method: :post, local: true do |f|%>

              <%= f.hidden_field :user_id, value: @user.id %>

              <%= f.submit "D Mを始める", class:"text-light btn btn-outline-success mt-4" %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>