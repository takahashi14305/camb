<%= stylesheet_link_tag "users", :media => "all" %>
<div class="container-fluid">
  <div class="full-page">

    <%= render 'public/homes/header' %>

    <div class= "row">
      <div class="col-md-3 text-center text-white"></div>
      <div class="col-md-3 text-white mt-1 mb-1">
        <h3>フォロワー一覧</h3>
      </div>
      <div class="col-md-3 text-white mt-3">
        <%= paginate @users, theme: 'bootstrap-5' %>
      </div>
      <div class="col-md-3 text-white mt-1">
        <%#= paginate @post_images, theme: 'bootstrap-5' %>
      </div>
    </div>

    <div class= "row">
      <%= render 'public/users/profile', user: @user, post_images: @post_images %>

      <%= render 'public/relationships/follow', users: @users %>

    </div>
  </div>
</div>