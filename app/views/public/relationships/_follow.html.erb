<div class="col-md-9">
<% if users.exists? %>
  <% users.each do |user| %>
    <table>
      <thead>
        <tr>
          <th>名前</th>
          <th>投稿数</th>
          <th>フォロー </th>
          <th>フォロワー数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(30,30), class:"rounded-circle"; %><%= user.name %></td>
          <td><%= user.post_images.count %></td>
          <td><%= user.followings.count %></td>
          <td><%= user.followers.count %></td>
          <td>
            <% if current_user.following?(user) %>
              <div class="btn btn-outline-success mt-4"><%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class:"text-light" %></div>
            <% else %>
              <div class="btn btn-outline-success mt-4"><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"text-light" %></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
