<div class="col-md-8 text-light">
  <% if users.exists? %>
    <div class='box8 scroll'>
      <table class="table text-white text-center">
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th>投稿数</th>
            <th>フォロー </th>
            <th>フォロワー</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% users.each do |user| %>
            <tr class="follow">
              <td><%= image_tag user.get_profile_image(30,30), class:"rounded-circle"; %></td>
              <td><%= user.name %></td>
              <td><%= user.post_images.count %></td>
              <td id="follow_count"><%= render 'public/relationships/follow_count', user: user %></td>
              <td id="follower_count"><%= render 'public/relationships/follower_count', user: user %></td>
              <td><div id="follow_buttons_<%= user.id %>"><%= render 'public/relationships/relationships', user: user %></div></td>
              <td>
                <% if user != current_user %>
                  <% if current_user.has_room?(user) %>
                    <div><%= link_to "ダイレクトメッセージ", room_path(current_user.get_room(user)), method: :get, class:"text-light btn btn-outline-success" %></div>
                  <% else %>
                    <%= form_with model: Room.new, method: :post, local: true do |f|%>
                      <%= f.hidden_field :user_id, value: user.id %>
                      <div><%= f.submit "D Mを始める", class:"text-light btn btn-outline-success" %></div>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>

</div>
