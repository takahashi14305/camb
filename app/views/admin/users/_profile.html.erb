<div class="col-md-3 text-center text-white" style="margin-top:0px">
  <div>

    <h2>PROFILE</h2>
    <%#= link_to users_show_path(user.id) do %>
      <div class="text-center"><%= image_tag user.get_profile_image(170,170), class:"border border-3" %></div>
      <h3><%= user.name %></h3>
    <%# end %>
    <div>自己紹介</div>
    <% if !user.introduction.blank? %>
      <h5 class= "border-bottom mt-2 ml-4 mr-4"><%= user.introduction %></h5>
    <% else %>
      <h6 class= "border-bottom">まだ設定していません</h6>
    <% end %>
    <table align="center" width="220" height="180">
      <tr class= "border-bottom">
        <td><%= "投稿数　:　 #{user.post_images.count}" %> 件</td>
      </tr>
      <tr class= "border-bottom">
          <td><%= "Follow　: 　#{user.followings.count}" %></td>
          <%#= link_to user.followings.count, followings_path(user.id), class:"text-light" %>
      </tr>
      <tr class= "border-bottom">
        <%#= link_to relationships_followers_path(user.id) do %>
          <td><%= "Follower　: 　#{user.followers.count}" %></td>
          <%#= link_to user.followers.count, followers_path, class:"text-light" %>
        <%# end %>
      </tr>
    </table>

      <div><%= link_to "プロフィール編集", edit_admin_user_path(user), class:"text-light btn btn-outline-success mt-4" %></div>
      <div class=""><%#= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"text-light btn btn-outline-success mt-4" %></div>
      <div class=""><%= link_to "退会する", unsubscribe_path(user), class:"text-danger btn btn-outline-success mt-4" %></div>

  </div>
</div>