<div class="col-md-9">
  <div class="d-flex flex-wrap">
    <% if !post_images.blank? %>
      <% post_images.each do |post_image| %>
        <div class="col-md-3">
          <div class="card mb-2" style="height: 320px; width: 240px;">
            <%= link_to admin_post_image_path(post_image.id), class:"text-dark text-decoration-none" do %>
              <%= image_tag post_image.get_image, size: "150x150", class: 'card-img-top' %>
            <% end %>
            <div class="card-body">
              <%= link_to admin_post_image_path(post_image.id), class:"text-dark text-decoration-none" do %>
                <h5 class="card-title" style="line-height:1rem"><%= post_image.title %></h5>
                <p class="card-text text-truncate" style="line-height:1rem"><%= post_image.body %></p>
                <!--<div>閲覧数: <%#= post_image.view_counts.count %></div> -->

                <p class="card-text" style="line-height:1rem">
                  <%# if post_image.favorited_by?(current_user) %>
                    <div class="d-flex justify-content-between">
                      <%#= link_to post_image_favorites_path(post_image), method: :delete do %>
                      <!--  ♥<%#= post_image.favorites.count %>
                        <div class="">
                          <%#= link_to "https://twitter.com/share?url=#{ request.url }&text=【#{ post_image.user.name }の投稿をシェア】%0a%0a#{ post_image.title }%0a%0a%23CAMB%20%23キャンプ%20%23キャンプライフ%0a気になったら見てね！", target: '_blank' do %>
                            <i class="fab fa-twitter" style='color: #3399FF;'></i>シェア
                          <%# end %>
                        </div> -->
                      <%# end %>
                    </div>
                  <%# else %>
                    <div class="d-flex justify-content-between">
                      ♡<%= post_image.favorites.count %>
                      <%#= link_to post_image_favorites_path(post_image), method: :post do %>
                     <!--   ♡<%#= post_image.favorites.count %> -->
                        <div class="">
                          <%= link_to "https://twitter.com/share?url=#{ request.url }&text=【#{ post_image.user.name }の投稿をシェア】%0a%0a#{ post_image.title }%0a%0a%23CAMB%20%23キャンプ%20%23キャンプライフ%0a気になったら見てね！", target: '_blank' do %>
                            <i class="fab fa-twitter" style='color: #3399FF;'></i>シェア
                          <% end %>
                        </div>
                      <%# end %>
                    </div>
                  <%# end %>
                </p>
              <% end %>
            </div>

            <h5 class="card-footer" onclick='window.location="<%= admin_user_path(post_image.user.id) %>"' role="link">
              <%= image_tag post_image.user.get_profile_image(30,30), class:"rounded-circle"; %>
              <%= post_image.user.name %>
            </h5>
          </div>
        </div>
      <% end %>
    <% else %>
      <h5 class="text-light">------投稿がありません------</h5>
    <% end %>
  </div>
</div>