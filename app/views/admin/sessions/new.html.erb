<%= stylesheet_link_tag "sessions", :media => "all" %>
<div class="container-fluid">
  <div class="full-page">

    <div class= "row">
      <div class= "col-md-12 text-center text-white" style="margin-top:80px">
        <h1>管理者ログイン</h1>
      </div>
    </div>
    <%#= form_with model: @user, url: user_session_path do |f| %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class= "row">
        <div class= "col-md-12 text-center text-white">
          <table align="center" style="height: 200px">
            <tr>
              <td><%= f.label :email %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-transparent border border-white" %></td>
            </tr>
            <tr>
              <td><%= f.label :パスワード %></td>
              <td><%= f.password_field :password, autocomplete: "current-password", class: "bg-transparent border border-white" %></td>
            </tr>
          </table>
        </div>
      </div>

      <div class= "row">
        <div class= "col-md-12 text-center text-white">
          <div><% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン状態を保持 %>
          <% end %></div>
           <div style="margin-top:3px"><%= f.submit "ログインする", class:"btn btn-outline-success" %></div>
          <div style="margin-top:30px"><%= render "admin/shared/links" %></div>
          <div style="margin-top:30px"><%= link_to "最初のページに戻る", root_path, class: "text-white" %></div>
        </div>
      </div>

    <% end %>

  </div>
</div>

